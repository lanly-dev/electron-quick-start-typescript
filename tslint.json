{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "quotemark": [true, "single"],
    "semicolon": [false, "always"],
    "trailing-comma": false,
    "triple-equals": true
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
